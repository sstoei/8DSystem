@model _8DSystem.Models.RefFunction
@{
    Layout = "~/Views/Shared/_LayoutSetting2.cshtml";
}

<h1>Function</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header"><strong>Add</strong></div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Description</label>
                        <input asp-for="Description" class="form-control" type="text" name="Description" />
                    </div>
                    <div class="form-group">
                        <div class="icheck-success d-inline">
                            <input type="checkbox" asp-for="Active" name="Active" id="Active" checked>
                            <label for="Active" class="font-weight-normal">
                                Active
                            </label>
                        </div>
                    </div>
                   
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-primary" id="btnAdd" type="submit" name="btnAdd"><i class="fa fa-plus"></i>Add</button>
                </div>
            </div>
        </form>
        
    </div>
 
</div>